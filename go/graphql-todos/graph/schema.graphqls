# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  doneAt: Time
  createdAt: Time!
}

type Query {
  todos: [Todo!]!
}

input CreateTodoInput {
  text: String!
}

input UpdateTodoInput {
  id: ID!
  text:String
  done:Boolean
}

type Mutation {
  createTodo(input: CreateTodoInput!): Todo!
  updateTodo(input: UpdateTodoInput!): Todo!
}

scalar Time
